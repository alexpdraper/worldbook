@import url('https://fonts.googleapis.com/css?family=Gentium+Book+Basic:400,400i,700|Ubuntu:700&display=swap')

$systemFonts = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif
$bodyFont = 'Gentium Book Basic', Charter, 'Avenir', Helvetica, $systemFonts
$headingFont = Ubuntu, Weissenhof Grotesk, Futura, Avenir, Helvetica, $systemFonts

*,
*::before,
*::after
  box-sizing: inherit

html
  box-sizing: border-box
  font-size: 16px
  @media (min-width: 992px)
    font-size: 17px
  @media (min-width: 1024px)
    font-size: 18px

body
  font-family: $bodyFont
  font-size: 1rem
  background: #f7f6f3

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6
  font-family: $headingFont
  font-weight: bold

h1,
.h1
  font-size: 2rem

h2,
.h2
  font-size: 1.5rem

h3,
.h3
  font-size: 1.25rem
  text-transform: uppercase
  letter-spacing: 0.1em

h4,
.h4
  font-size: 1rem

th,
label
  font-weight: normal
  font-style: italic

h1,
h2,
h3,
h4,
h5,
h6,
p
  margin-top: 0
  margin-bottom: 1rem
  &:last-child
    margin-bottom: 0

.box,
.content,
.notification,
.progress,
.table,
.table-container,
.title,
.subtitle,
.block,
.highlight,
.breadcrumb,
.level,
.list,
.message,
.tabs
  &:not(:last-child)
    margin-bottom: 1.5rem
