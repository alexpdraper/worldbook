$systemFonts = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif

*,
*::before,
*::after
  box-sizing: inherit

html
  box-sizing: border-box
  font-size: 15px
  @media (min-width: 768px)
    font-size: 16px
  @media (min-width: 992px)
    font-size: 17px
  @media (min-width: 1024px)
    font-size: 18px

body
  font-family: Tara, Charter, 'Avenir', Helvetica, $systemFonts
  font-size: 1rem

h1,
h2,
h3,
h4,
h5,
h6
  font-family: Weissenhof Grotesk, Futura, Avenir, Helvetica, $systemFonts

th,
label
  font-weight: normal
  font-style: italic

h1,
h2,
h3,
h4,
h5,
h6,
p
  margin-top: 0
  margin-bottom: 1rem
  &:last-child
    margin-bottom: 0

.box,
.content,
.notification,
.progress,
.table,
.table-container,
.title,
.subtitle,
.block,
.highlight,
.breadcrumb,
.level,
.list,
.message,
.tabs
  &:not(:last-child)
    margin-bottom: 1.5rem
