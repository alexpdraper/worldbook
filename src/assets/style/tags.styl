.tags
  align-items: center
  display: flex
  flex-wrap: wrap
  justify-content: flex-start
  .tag
    margin-bottom: 0.5rem
  .tag:not(:last-child)
    margin-right: 0.5rem
  &:last-child
    margin-bottom: -0.5rem
  &:not(:last-child)
    margin-bottom: 1rem
  &.are-medium .tag:not(.is-normal):not(.is-large)
    font-size: 1rem
  &.are-large .tag:not(.is-normal):not(.is-medium)
    font-size: 1.25rem
  &.is-centered
    justify-content: center
  &.is-centered .tag
    margin-right: 0.25rem
    margin-left: 0.25rem
  &.is-right
    justify-content: flex-end
  &.is-right .tag:not(:first-child)
    margin-left: 0.5rem
  &.is-right .tag:not(:last-child)
    margin-right: 0
  &.has-addons .tag
    margin-right: 0
  &.has-addons .tag:not(:first-child)
    margin-left: 0
    border-bottom-left-radius: 0
    border-top-left-radius: 0
  &.has-addons .tag:not(:last-child)
    border-bottom-right-radius: 0
    border-top-right-radius: 0

.tag:not(body)
  align-items: center
  background-color: whitesmoke
  border-radius: 4px
  color: #4a4a4a
  display: inline-flex
  font-size: 0.75rem
  height: 2em
  justify-content: center
  line-height: 1.5
  padding-left: 0.75em
  padding-right: 0.75em
  white-space: nowrap
  &.button
    padding-top: 0
    padding-bottom: 0
  .delete
    margin-left: 0.25rem
    margin-right: -0.375rem
  &.is-white
    background-color: white
    color: #0a0a0a
  &.is-black
    background-color: #0a0a0a
    color: white
  &.is-light
    background-color: whitesmoke
    color: #363636
  &.is-dark
    background-color: #363636
    color: whitesmoke
  &.is-primary
    background-color: #00d1b2
    color: #fff
  &.is-link
    background-color: #3273dc
    color: #fff
  &.is-info
    background-color: #209cee
    color: #fff
  &.is-success
    background-color: #23d160
    color: #fff
  &.is-warning
    background-color: #ffdd57
    color: rgba(0, 0, 0, 0.7)
  &.is-danger
    background-color: #ff3860
    color: #fff
  &.is-normal
    font-size: 0.75rem
  &.is-medium
    font-size: 1rem
  &.is-large
    font-size: 1.25rem
  .icon:first-child:not(:last-child)
    margin-left: -0.375em
    margin-right: 0.1875em
  .icon:last-child:not(:first-child)
    margin-left: 0.1875em
    margin-right: -0.375em
  .icon:first-child:last-child
    margin-left: -0.375em
    margin-right: -0.375em
  &.is-delete
    margin-left: 1px
    padding: 0
    position: relative
    width: 2em
    &::before,
    &::after
      background-color: currentColor
      content: ""
      display: block
      left: 50%
      position: absolute
      top: 50%
      transform: translateX(-50%) translateY(-50%) rotate(45deg)
      transform-origin: center center
    &::before
      height: 1px
      width: 50%
    &::after
      height: 50%
      width: 1px
    &:hover,
    &:focus
      background-color: #e8e8e8
    &:active
      background-color: #dbdbdb
  &.is-rounded
    border-radius: 290486px

a.tag:hover
  text-decoration: underline
